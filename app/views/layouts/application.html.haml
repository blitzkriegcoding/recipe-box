!!! 5
%html
  %head
    %title Aplicación para recetas
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default
      .container
        .navbar-brand= link_to "Libro de recetas", root_path

        - if user_signed_in?
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "Nueva receta", new_recipe_path
            %li= link_to "Cerrar sesión", destroy_user_session_path, method: :delete
        - else
          %ul.nav.navbar-nav.navbar-right
            %li= link_to "Registrarse", new_user_registration_path
            %li= link_to "Iniciar sesión", new_user_session_path

        
    .container
      -flash.each do |name, msg|
        = content_tag :div, msg, class: "alert"
      = yield

